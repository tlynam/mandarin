<p id="notice"><%= notice %></p>

<div class="english_phrase">
  <strong>English:</strong>
  <%= @phrase.english %>
</div>

<div class="pinyin_attempt attempt">
  <strong>Pinyin Attempt:</strong>
  <%= text_field_tag 'pinyin_attempt' %>
  <div class="pinyin_success status_icon">
    😎
  </div>
  <div class="pinyin_failure status_icon">
    🤔
  </div>
</div>

<div class="simplified_attempt">
  <strong>Simplified Attempt:</strong>
  <%= text_field_tag 'simplified_attempt' %>
  <div class="simplified_success status_icon">
    😎
  </div>
  <div class="simplified_failure status_icon">
    🤔
  </div>
</div>

<div class="chinese_translations">
  <strong>Pinyin:</strong>

  <div class="translation_text pinyin_translation">
    <%= @phrase.pinyin %>
  </div>

  <div class="pinyin_translation_no_accent">
    <%= I18n.transliterate(@phrase.pinyin) %>
  </div>

  <strong>Simplified:</strong>

  <div class="translation_text simplified_translation">
    <%= @phrase.simplified %>
  </div>
</div>

<br>

<%= link_to 'New', new_phrase_path %> |
<%= link_to 'Edit', edit_phrase_path(@phrase) %> |
<%= link_to 'List', phrases_path %> |
<%= link_to 'Random', @random_phrase %>
